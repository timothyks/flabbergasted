      cards.forEach(card => {
        card.addEventListener('click', () => {
          const characterId = card.getAttribute('data-character-id');
          const accentColor = getComputedStyle(card).getPropertyValue('--accent');

          const popup = document.querySelector('.character-profile');
          popup.style.setProperty('--accent', accentColor);

          popup.innerHTML = characterTemplates[characterId];
        });
      });

      // Attach character card event listeners once DOM is ready
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".character-card:not(.unavailable)").forEach(card => {
          card.addEventListener("click", () => {
            const id = card.dataset.characterId;
            const accentColor = getComputedStyle(card).getPropertyValue('--accent');

            if (characterProfiles[id]) {
              // Set popup accent before showing
              const popup = document.getElementById("character-popup");
              popup.style.setProperty('--accent', accentColor.trim());

              // Show popup
              openPopup(characterProfiles[id]);
            }
          });
        });
      });

